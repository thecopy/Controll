<Window x:Class="Controll.SampleClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <StackPanel>
        <Label Content="Status:"/>
            <Label Content="{Binding Status}"/>
            <TextBox Text="{Binding Log}" Height="200"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <Button Content="Connect to thecopy.mooo.com" Click="ConnectButtonClicked"/>
            <Button Content="Connect to localhost" Click="ConnectButtonClicked"/>
            <Button Content="Register" Click="RegisterButtonClicked"/>
            <Button Content="Log On" Click="LogOnButtonClicked"/>
            <Button Content="Get all available activities" Click="GetAvaiableActivities"/>
            <Button Content="Get installed activities on zombieTest" Click="PrintActivitesInstalledOnZombie"/>
            <TextBlock Text="Key for activity to download on zombieTest:"/>
            <TextBox Text="{Binding KeyToDownload}" Margin="2"/>
            <Button Content="Download" Click="DownloadActivity"/>
            <Button Content="Start spotify activity" Click="ActivateDoNothingClicked"/>
        </StackPanel>
    </Grid>
</Window>
